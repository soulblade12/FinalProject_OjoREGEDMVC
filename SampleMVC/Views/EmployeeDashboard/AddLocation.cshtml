@model OjoREGED.BLL.DTOs.EmployeeLocationCreateDTO
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Form mask</h4>
        <p class="card-description">Gives a preview of input format</p>
        <form asp-action="AddLocation" method="post">
            <div class="col-lg-12 mb-3 mt-3 ">
                <label asp-for="Location_Address" class="form-label">Location Address :</label>
                <input type="text" class="form-control" name="Location_Address" asp-for="Location_Address" />
            </div>
            <div class="col-lg-3 mb-3">
                <label asp-for="Province" class="form-label">Province :</label>
                <input type="text" class="form-control" name="Province" asp-for="Province" />
            </div>
            <div class="col-lg-3">
                <label asp-for="City" class="form-label">City :</label>
                <input type="text" class="form-control" name="City" asp-for="City" />
            </div>
            <div class="col-lg-6 mb-3">
                <label asp-for="Postal_Code" class="form-label">Postal Code :</label>
                <input type="text" class="form-control" name="Postal_Code" asp-for="Postal_Code" />
            </div>
            <input type="submit" name="name" class="btn btn-primary" value="AddLocation" />
        </form>
    </div>
</div>