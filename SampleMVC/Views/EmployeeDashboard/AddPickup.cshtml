    @model OjoREGED.BLL.DTOs.EmployeeInsertPickup


    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Form mask</h4>
            <p class="card-description">Gives a preview of input format</p>
            <form asp-action="AddPickup" method="post">
                <div class="col-lg-12 mb-3 mt-3 ">
                    <label asp-for="Delivery_Status" class="form-label">Delivery Status :</label>
                    <input type="text" class="form-control" name="Delivery_Status" asp-for="Delivery_Status" />
                </div>
                <div class="col-lg-3 mb-3">
                    <label asp-for="Delivery_Charges" class="form-label">Delivery Charges :</label>
                    <input type="number" class="form-control" name="Delivery_Charges" asp-for="Delivery_Charges" />
                </div>
                <div class="col-lg-3">
                    <label asp-for="Tip_Amount" class="form-label">Tip Amount :</label>
                    <input type="number" class="form-control" name="Tip_Amount" asp-for="Tip_Amount" />
                </div>
                <div class="col-lg-6 mb-3">
                    <label asp-for="Order_ID" class="form-label">Order_ID :</label>
                <select asp-for="Order_ID" class="form-control" name="Order_ID">
                        <option value="">Select Order</option>
                        @foreach (var order in ViewBag.order)
                        {
                            <option value="@order.Order_ID">
                                Order ID: @order.Order_ID - Date: @order.Date
                            </option>
                        }
                    </select>
                </div>
                <input type="submit" name="name" class="btn btn-primary" value="AddPickup" />
            </form>
        </div>
    </div>