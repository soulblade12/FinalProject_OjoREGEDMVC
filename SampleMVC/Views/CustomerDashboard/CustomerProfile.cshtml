@model OjoREGED.BLL.DTOs.CustomerDTO


<div class="col-lg-12">
    <!-- Basic Card Example -->
    <div class="card shadow mb-4">


        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List Employee :</h6>
        </div>

        <div class="card-body">
            @Html.Raw(ViewData["message"])
            <div class="col-lg-12">
                <div class="form-group row">
                    <div class="col-lg-12 mb-3 mt-3">
                        <label for="FirstName" class="form-label">First Name :</label>
                        <input type="text" class="form-control" name="FirstName" value="@Model.First_Name" />
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="MiddleName" class="form-label">Middle Name :</label>
                        <input type="text" class="form-control" name="MiddleName" value="@Model.Middle_Name" />
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="LastName" class="form-label">Last Name :</label>
                        <input type="text" class="form-control" name="LastName" value="@Model.Last_Name" />
                    </div>
                    <div class="col-lg-3 mb-3">
                        <label for="Telephone" class="form-label">Telephone :</label>
                        <input type="text" class="form-control" name="Telephone" value="@Model.Telephone" />
                    </div>
                </div>
                <hr />
                <form asp-action="CustomerProfile" method="post">
                    <div class="form-group row">
                        <div class="col-lg-12 mb-3 mt-3 ">
                            <label for="StreetAddress" class="form-label">Street Address :</label>
                            <input type="text" class="form-control" name="StreetAddress" value="@Model.AddressesDTO.Street_Address" />
                        </div>
                        <div class="col-lg-3 mb-3">
                            <label for="Province" class="form-label">Province :</label>
                            <input type="text" class="form-control" name="Province" value="@Model.AddressesDTO.Province" />
                        </div>
                        <div class="col-lg-3">
                            <label for="City" class="form-label">City :</label>
                            <input type="text" class="form-control" name="City" value="@Model.AddressesDTO.City" />
                        </div>
                        <div class="col-lg-6 mb-3">
                            <label for="CustomerPostalCode" class="form-label">Postal Code :</label>
                            <input type="text" class="form-control" name="CustomerPostalCode" value="@Model.AddressesDTO.Postal_Code" />
                        </div>
                    </div>
                    <input type="submit" name="name" class="btn btn-primary" value="CustomerProfile" />
                </form>
            </div>


        </div>



        
    </div>
    <div class="card shadow mb-4"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}