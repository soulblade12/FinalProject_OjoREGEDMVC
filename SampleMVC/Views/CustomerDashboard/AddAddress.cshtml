@model OjoREGED.BLL.DTOs.AddressesDTO


<div class="col-lg-12">
    <!-- Basic Card Example -->
    <div class="card shadow mb-4">


        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List Employee :</h6>
        </div>

        <div class="card-body">
            @Html.Raw(ViewData["message"])

            <form asp-action="AddAddress" method="post">
                    <div class="form-group row">
                        <div class="col-lg-12 mb-3 mt-3 ">
                        <label asp-for="Street_Address" class="form-label">Street Address :</label>
                        <input type="text" class="form-control" name="Street_Address" asp-for="Street_Address" />
                        </div>
                        <div class="col-lg-3 mb-3">
                            <label asp-for="Province" class="form-label">Province :</label>
                        <input type="text" class="form-control" name="Province" asp-for="Province" />
                        </div>
                        <div class="col-lg-3">
                            <label asp-for="City" class="form-label">City :</label>
                            <input type="text" class="form-control" name="City" asp-for="City" />
                        </div>
                        <div class="col-lg-6 mb-3">
                        <label asp-for="Postal_Code" class="form-label">Postal Code :</label>
                        <input type="text" class="form-control" name="Postal_Code" asp-for="Postal_Code" />
                        </div>
                    </div>
                <input type="submit" name="name" class="btn btn-primary" value="AddAddress" />
                </form>
            </div>


        </div>




    </div>
    <div class="card shadow mb-4"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}