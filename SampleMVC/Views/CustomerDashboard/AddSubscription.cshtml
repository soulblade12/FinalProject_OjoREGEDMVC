<div class="col-lg-12">
    <!-- Basic Card Example -->
    <div class="card shadow mb-4">
        <asp:Literal ID="ltMessage" runat="server" />

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List Employee :</h6>
        </div>
        <form asp-action="AddSubscription" method="post">

            <div class="card-body">
                <div class="col-lg-12">
                    <div class="form-group row">
                        <div class="col-lg-12 mb-3 mt-3">
                          

                            <label for="Customer_ID" class="form-label">Customer_ID</label>
                            <input type="text" class="form-control" name="Customer_ID" value="@ViewBag.UserID" readonly />
                        </div>
                        <label for="subscription">Select Subscription:</label>
                        <select class="form-control" id="subscription" name="subscription">
                            <option value="">Select Subscription</option>
                            @foreach (var subscription in Model)
                            {
                                <option value="@subscription.Subscription_ID">@subscription.Name - Price: @subscription.Price</option>
                            }
                        </select>
                    </div>
                    <hr />
                    <input type="submit" class="btn btn-primary" name="name" value="AddSubscription" />
                   
                </div>


            </div>
        </form>
    </div>
    <div class="card shadow mb-4"></div>
</div>