@model OjoREGED.BLL.DTOs.employeeDTO
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee List</h4>
                @* <a asp-action="AddPickup" class="btn btn-danger btn-user btn-block">Add Pickup</a> *@
                <div class="table-responsive">
                    <table id="order-placed-listing" class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Username</th>
                                <th>Telephone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderPlaced in ViewBag.Employee)
                            {
                                <tr>
                                    <td>@orderPlaced.First_Name</td>
                                    <td>@orderPlaced.Middle_Name</td>
                                    <td>@orderPlaced.Last_Name</td>
                                    <td>@orderPlaced.Telephone</td>
                                    <td>@orderPlaced.Username</td>
                                    <td class="text-right">
                                        @* <button class="btn btn-light"> *@
                                        <i class="ti-eye text-primary"></i><a asp-action="Edit" asp-route-id="@orderPlaced.Employee_ID" class="btn btn-warning btn-sm">edit</a>
                                        @* </button> *@
                                        <button class="btn btn-light">
                                            <i class="ti-close text-danger"></i>  <a asp-action="Delete" onclick="return confirm('Are you sure you want to delete this User?')" asp-route-id="@orderPlaced.Employee_ID" class="btn btn-danger btn-sm">delete</a>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
   
    <script>
        $(document).ready(function () {
            $('#order-placed-listing').DataTable();
        });
    </script>


    <script src="~/skydash/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/skydash/vendors/datatables.net-bs5/dataTables.bootstrap5.js"></script>
}